<!DOCTYPE html>
<html>
    <head>
        <base href="{{ urlBase }}/">
        <title>{% block title %}{{ basetext.title }}{% endblock %}</title>
        <meta http-equiv="Content-type" content="text/html; charset=utf-8">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link rel="icon" type="image/png" href="{% block favicon %}assets/favicon.png{% endblock %}">
        {% for url in urlCss %}
            <link rel="stylesheet" type="text/css" href="{{ url }}">
        {% endfor %}
        {% for url in urlJs %}
            <script type="text/javascript" src="{{ url }}" defer></script>
        {% endfor %}
    </head>
    <body>
        <div class="container text-center">
        {% block errors_and_notices %}
            <div>
                {% for error in errors %}<div class='error_container'><div class='error'>{{ error }}</div></div>{% endfor %}
                {% for notice in notices %}<div class='notice_container'><div class='notice'>{{ notice }}</div></div>{% endfor %}
            </div>
        {% endblock %}
        </div>
        {% block content %}{% endblock %}
    </body>
</html>